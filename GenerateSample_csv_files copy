import pandas as pd
import os
from datetime import datetime

def generate_sample_csv_files(filenamem, num_rows, start_index=1, month=1):
    """Generates a simple CSV files with specified number of rows."""
    current_year = datetime.now().year
    start_date = pd.to_datetime(f"{current_year}-{str(month).zfill(2)}-01")
    # Create a Dataframe with sample data
    data = {
        'OrderID': [f"{current_year}{str(i).zfill(4)}" for i in range(start_index, start_index + num_rows)  ],   
        'Value': [f'SampleData{i}' for i in range(start_index, start_index + num_rows)],
        'Date': (start_date + pd.to_timedelta(range(num_rows), unit='D')).strftime('%Y-%m-%d')
    }
    df = pd.DataFrame(data)
    df.to_csv(filenamem, index=False)
    print(f"Generated {filenamem} with {num_rows} rows.")
    return start_index + num_rows -1 # Return the last index used
# Example usage
if __name__ == "__main__":
    output_dir = "sample_csv_files"
    os.makedirs(output_dir, exist_ok=True)
    
    # or we can just specify the number of rows for each month

    last_index = 0
    for month in range(1, 13):
        filename = os.path.join(output_dir, f"SampleData_{str(month).zfill(2)}.csv")
        last_index = generate_sample_csv_files(filename, num_rows=30, start_index=last_index + 1, month=month)  
    
